{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "es2015",
    "jsx": "react",
    "types": [],
    "composite": true
  },
  "include": [
    "src/*",
    "src/Components/Body/AppBody.tsx",
    "src/Components/Header/AppHeader.tsx",
    "src/Components/Header/AppHeaderOptions.tsx",
    "src/Components/Comments/CommentBody.tsx",
    "src/Components/Comments/CommentCard.tsx",
    "src/Components/Comments/CommentFooter.tsx",
    "src/Components/Comments/CommentHeader.tsx",
    "src/Components/Comments/Comment.tsx"
  ],
  "references": [
    {
      "path": "../application"
    },
    {
      "path": "../apputils"
    }
  ]
}
